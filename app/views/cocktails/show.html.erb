<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <ul>
    <li> Ingredients | <%= dose.ingredient.name %></li>
    <li> Dose | x<%= dose.description %></li>
  </ul>
  <% if @cocktail.photo.present? %>
    <%= cl_image_tag @cocktail.photo, height: 200, width: 300, crop: :fill %>
  <% end %>
  <br>
  <%= link_to 'Delete', cocktail_dose_path(@cocktail, dose), method: :delete %>
<% end %>
<br>
  <%= link_to 'Add a new ingredient', new_cocktail_dose_path(@cocktail) %>
<br>
  <%= link_to 'Back to all cocktails', cocktails_path %>





